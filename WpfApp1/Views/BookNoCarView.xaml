<UserControl x:Class="WpfApp1.Views.BookNoCarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="No car arrangement? Then please hit CONFIRM" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
        <Button x:Name="BtnConfirmNoCar" Content="CONFIRM" Width="150" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" FontSize="18" FontWeight="Bold" Click="BtnConfirmNoCar_Click"/>
      
    </Grid>
</UserControl>
